{
  "manifest_version": 3,
  "name": "FlowLock: Pomodoro Timer, todo list & Website Blocker ",
  "version": "1.1.0",
  "description": "Boost productivity with Pomodoro timer, smart website blocking, YouTube distraction control & detailed focus analytics.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "offscreen"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["blocker.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["break-enforcer.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pomodoro Timer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html", 
        "offscreen.html", 
        "offscreen.js",
        "help.html",
        "help.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}