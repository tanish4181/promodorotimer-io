{
  "manifest_version": 3,
  "name": "Advanced Pomodoro Timer",
  "version": "1.0.0",
  "description": "A sophisticated Pomodoro timer with break enforcement and YouTube integration for enhanced productivity.",
  "permissions": ["storage", "activeTab", "tabs", "scripting", "alarms", "notifications"],
  "host_permissions": ["https://www.youtube.com/*", "https://youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pomodoro Timer"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
